<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kimsoohyeong.week3.Main"
    android:weightSum="1">

    <TextView
        android:textColor="#8484ae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="학점을 계산해 보세요" />

    <TableLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#edd3d3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="국어"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:layout_weight="0.15"/>

            <EditText
                android:hint="점수 입력"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/e1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="수학"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:layout_weight="0.15"/>

            <EditText
                android:hint="점수 입력"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/e2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="영어"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:layout_weight="0.15"/>

            <EditText
                android:hint="점수 입력"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/e3"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:onClick="onMyClick"
                android:layout_span="2"
                android:layout_weight="1"
                android:text="학점 계산"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:onClick="onMyClick"
                android:layout_span="2"
                android:layout_weight="1"
                android:text="초기화"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_weight="0.3"
                android:text="총점"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text4" />

            <TextView
                android:text="0점"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/t1"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.3"
                android:text="평균"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text5" />

            <TextView
                android:text="0점"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_weight="0.3"
                android:text="학점"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text6" />

            <ImageView
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/i1" />

        </TableRow>

    </TableLayout>
</LinearLayout>
